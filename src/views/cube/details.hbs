<main>
  <h1>{{selectedCube.name}}</h1>
  <img class="cube" src="{{selectedCube.imageUrl}}">
  <div class="details">
    <p><span>Description:</span> {{selectedCube.description}}</p>
    <p><span>Difficulty level:</span> {{selectedCube.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/cubes/{{selectedCube._id}}/attach-accessory">Attach Accessory</a>
    {{#if isOwner}}
        <a class="btn" href="/cubes/{{selectedCube._id}}/delete">delete</a>
        <a class="btn" href="/cubes/{{selectedCube._id}}/edit">Edit</a>
    {{/if}}
  </div>
  <h2>Accessories</h2>
    <div class="accessories">
        {{#if hasAccessories}}
            {{#each accessories}}
                <div class="accessory">
                    <img src="{{imageUrl}}" alt="stickerName">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>
            {{/each}}
        {{else}}
            <h3 class="italic">This cube has no accessories yet...</h3>
        {{/if}}
    </div>
</main>